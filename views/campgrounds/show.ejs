<% include ../partials/header.ejs %>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">YelpCamp</p>
      <div class="list-group">
        <li class="list-group-item">Info 1</li>
        <li class="list-group-item">Info 2</li>
        <li class="list-group-item">Info 3</li>
      </div>
      <div id="address">
        <%= campground.address %>
      </div>
      <div class="hidden">
        <div id="lat">
          <%= coordinates.lat %>
        </div>
        <div id="lng">
          <%= coordinates.lng %>
        </div>
      </div>
      <!--<div id="map">

      </div>-->
    </div>
    <div class="col-md-9">
      <div class="thumbnail">
        <img class-"img-responsive" src="<%= campground.image %>" alt="">
        <div class="caption-full">
          <h4 class="pull-right">$<%= campground.price %>/night</h4>
          <h4><a><%= campground.name %></a></h4>
          <p><%= campground.description %></p>
          <p><em>Submitted By <%= campground.author.username %></em></p>
          <% if(currentUser && campground.author.id.equals(currentUser._id)) { %>
          <a class="btn btn-warning" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
          <form class="DeleteForm" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="post">
            <button class="btn btn-danger">Delete</button>
          </form>
          <% } %>
        </div>
      </div>
      <div class="well">
        <div class="text-right">
          <a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Add New Comment</a>
        </div>
        <hr>
        <% campground.comments.forEach((comment) => { %>
          <div class="row">
            <div class="col-md-12">
              <strong><%= comment.author.username %></strong>
              <p><%= comment.text %></p>
              <% if(currentUser && campground.author.id.equals(currentUser._id)) { %>
              <a class="btn btn-xs btn-warning" href="/campgrounds/<%= campground._id %>/comments/<%=comment._id %>/edit">Edit</a>
              <form class="DeleteForm" action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>?_method=delete" method="post">
                <input class="btn btn-xs btn-danger" type="submit" value="Delete">
              </form>
              <% } %>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </div>
</div>

<script>
  function initMap() {
    var lat = document.getElementById("lat").innerHTML;
    var lng = document.getElementById("lng").innerHTML;
    console.log(lat + " " + lng);
    var map = new google.maps.Map(document.getElementById("map"), {
      zoom: 15,
      center: new google.maps.LatLng(lat, lng)
    });
  }
</script>

<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCbhGHdbE7Bt0B0lDM_h70PXM7K8hg20hw&callback=initMap"
async defer></script>


